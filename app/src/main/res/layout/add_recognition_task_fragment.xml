<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.View.AddRecognitionTaskView"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/normalMargin">
        <EditText
            android:id="@+id/task_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:hint="Название"
            android:layout_marginBottom="@dimen/normalMargin"/>
        <EditText
            android:id="@+id/task_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:hint="Альтернативное название"
            android:layout_marginBottom="@dimen/normalMargin"/>
        <EditText
            android:id="@+id/task_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:hint="Ещё один вариант названия"
            android:layout_marginBottom="@dimen/normalMargin"/>
        <Button
            android:id="@+id/load_task_image"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/load_image_btn"/>
        <ImageView
            android:id="@+id/task_image"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_height="250dp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>