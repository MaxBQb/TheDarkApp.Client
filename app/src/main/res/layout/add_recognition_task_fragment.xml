<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.View.AddRecognitionTaskFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/normalMargin">
        <EditText
            android:id="@+id/task_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:hint="Название"
            android:layout_marginBottom="@dimen/normalMargin"/>
        <EditText
            android:id="@+id/task_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:hint="Альтернативное название"
            android:layout_marginBottom="@dimen/normalMargin"/>
        <EditText
            android:id="@+id/task_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="textAutoCorrect|textAutoComplete"
            android:hint="Ещё один вариант названия"
            android:layout_marginBottom="@dimen/normalMargin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/halfMargin"
            android:textAlignment="center"
            android:textSize="12pt"
            android:text="@string/load_images_title"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/halfMargin"
            android:layout_marginBottom="@dimen/normalMargin"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>